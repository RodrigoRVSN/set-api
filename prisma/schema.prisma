generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
  shadowDatabaseUrl    = env("SHADOW_DATABASE_URL")
}

enum Role {
  ADMIN
  SYNDICATE
  RESIDENT
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  phone    String?
  password String
  role     Role
}
